@model IEnumerable<OnlineAuctionApplication.ViewModels.BidVM>

@{
    ViewData["Title"] = "Bids";
}

<h1>Auction Bids</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Amount
            </th>
            <th>
                Time Created
            </th>
            <th>
                Bidder
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bidder.Username)
            </td>
        </tr>
}
    </tbody>
</table>
